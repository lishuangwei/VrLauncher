<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/bg"
    android:layout_height="match_parent"
    >

    <com.xunixianshi.vrlanucher.tvui.views.TitleView
        android:id="@+id/app_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/app_uninstall_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/app_title_tv">
        <Button
            android:id="@+id/app_uninstall_back_bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sel_back"
            android:focusable="true"/>
        <!--<TextView-->
            <!--android:id="@+id/app_uninstall_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="应用卸载"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="24sp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--/>-->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/uninstall"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/app_uninstall_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_uninstall_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        />

</RelativeLayout>